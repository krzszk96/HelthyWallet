<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewChart"
    android:background="@color/mainColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/walleticon" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthy Wallet"
            android:textColor="@color/mainColor"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>
        <ImageView
            android:id="@+id/imageView55"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:tint="@color/mainColor"
            android:src="@drawable/user_account_icon" />
        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:tint="@color/mainColor"
            android:src="@drawable/menu_btn" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:background="@drawable/chart_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView558"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:tint="@color/mainColor"
                        android:src="@drawable/transaction_icon" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Dodaj pozycję:"
                        android:textColor="@color/mainColor"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tytuł:"
                        android:textColor="@color/mainColor"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/addTitle"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_border_dark"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:hint="@string/hint_title"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/mainColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/mainColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Kwota:" />
                    <EditText
                        android:id="@+id/addAmountV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_border_dark"
                        android:ems="10"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="13dp"
                        android:hint="-"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/mainColor" />

                    <EditText
                        android:id="@+id/addAmount"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_border_dark"
                        android:ems="10"
                        android:paddingLeft="20dp"
                        android:hint="@string/hint_amount"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/mainColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/mainColor"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Data:" />

                    <EditText
                        android:id="@+id/addDateD"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edit_text_border_dark"
                        android:ems="10"
                        android:paddingLeft="10dp"
                        android:hint="dzień"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/mainColor" />
                    <EditText
                        android:id="@+id/addDateM"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/edit_text_border_dark"
                        android:ems="10"
                        android:paddingLeft="10dp"
                        android:hint="mies"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/mainColor" />
                    <EditText
                        android:id="@+id/addDateY"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_border_dark"
                        android:ems="10"
                        android:paddingLeft="10dp"
                        android:hint="rok"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:textColorHint="@color/mainColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kategoria:"
                        android:textColor="@color/mainColor"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        />
<!--                    <EditText-->
<!--                        android:id="@+id/addCategory"-->
<!--                        android:layout_width="230dp"-->
<!--                        android:layout_height="30dp"-->
<!--                        android:background="@drawable/edit_text_border_dark"-->
<!--                        android:ems="10"-->
<!--                        android:paddingLeft="20dp"-->
<!--                        android:hint="@string/hint_category"-->
<!--                        android:inputType="text"-->
<!--                        android:textSize="15dp"-->
<!--                        android:textColor="@color/mainColor"-->
<!--                        android:textColorHint="@color/mainColor" />-->

                </LinearLayout>


                <Button
                    android:id="@+id/addDataBtn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_button_dark"
                    android:text="@string/btn_submit"
                    android:textAllCaps="false"
                    android:textColor="@color/mainColor" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/chart_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView555"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:tint="@color/mainColor"
                    android:src="@drawable/category_icon" />
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Dodaj kategorie:"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kategoria:"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addCategoryBase"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_text_border_dark"
                    android:ems="10"
                    android:paddingLeft="20dp"
                    android:hint="@string/hint_category"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textColor="@color/mainColor"
                    android:textColorHint="@color/mainColor" />


            </LinearLayout>
            <Button
                android:id="@+id/addCatBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_dark"
                android:text="@string/btn_submit"
                android:textAllCaps="false"
                android:textColor="@color/mainColor" />

        </LinearLayout>


            <LinearLayout
                android:id="@+id/transLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="Transakcje:"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>