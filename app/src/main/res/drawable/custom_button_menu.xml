<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="#1C1919" />
            <solid android:color="#1C1919" />
            <corners android:radius="10dp"/>

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:left="4dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="#3A3535" />
            <solid android:color="#3A3535" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

</layer-list>